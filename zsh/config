# PATH and EXPORT VARIABLES
# cdpath searches the subdirectories listed in the dirs you add
# export CDPATH=:~/ # the empty string between = and : searches current directory
export EDITOR="mate -w"
export PATH=~/bin:~/$ZSH/bin:$PATH
export GREP_OPTIONS='--color=auto' 
export GREP_COLOR='3;33'

# enable colored output from ls, etc
export LSCOLORS="exfxcxdxbxegedabagacad"
export CLICOLOR=true

# Ruby
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" && hash -d gem="$(rvm gemdir)/gems"
export RUBYOPT='rubygems'
# export RUBYLIB="./lib"
# alias irb=pry

# load functions
fpath=($ZSH/zsh/functions $fpath)
autoload -U $ZSH/zsh/functions/*(:t)

# initialize autocomplete here, 
# otherwise functions won't be loaded!
autoload -U compinit && compinit
autoload -U zmv

autoload colors && colors

# history file
HISTFILE=~/.zsh_history
HISTSIZE=1000
SAVEHIST=1000
REPORTTIME=10 # print elapsed time when more than 10 seconds

# options to set
setopt COMPLETE_ALIASES         #do not expand aliases _before_ completion has finished
setopt AUTO_CD                  # if not a command, try to cd to it.
setopt LIST_TYPES   # show ls -F style marks in file completion
setopt NO_BG_NICE # don't nice background tasks
setopt NO_HUP
setopt NO_LIST_BEEP # don not beep on history expansion errors
setopt LOCAL_OPTIONS # allow functions to have local options
setopt LOCAL_TRAPS # allow functions to have local traps
setopt HIST_VERIFY # reload full command when runing from history
setopt SHARE_HISTORY # share history between sessions ???
setopt EXTENDED_HISTORY # add timestamps to history
setopt PROMPT_SUBST # prompt more dynamic, allow function in prompt
setopt CORRECT # spell check for commands only
setopt COMPLETE_IN_WORD # stays where it is and completion is done from both ends
setopt IGNORE_EOF

setopt APPEND_HISTORY # adds history
setopt INC_APPEND_HISTORY SHARE_HISTORY  # adds history incrementally and share it across sessions
setopt HIST_IGNORE_ALL_DUPS  # don't record dupes in history
setopt HIST_REDUCE_BLANKS # reduce whitespace in history